<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="button" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@drawable/button_state_list</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:width">220dp</item>
    </style>

    <style name="heading" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>
</resources>
